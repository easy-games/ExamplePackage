{
	"compilerOptions": {
		// required
		"allowSyntheticDefaultImports": true,
		"downlevelIteration": true,
		"jsx": "react",
		"jsxFactory": "Roact.createElement",
		"jsxFragmentFactory": "Roact.Fragment",
		"module": "commonjs",
		"moduleResolution": "Node",
		"noLib": true,
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"moduleDetection": "force",
		"strict": true,
		"target": "ESNext",
		"typeRoots": ["node_modules/@rbxts", "node_modules/@easy-games", "src/Types", "../../Types~/"],

		// configurable
		"rootDirs": ["src/Server", "src/Client", "src/Shared"],
		"outDir": "../",
        "paths": {
            "*": [
                "*",
                "../../../Types~/*"
            ]
        },
		"baseUrl": "src",
		"incremental": false,
        "skipLibCheck": true,
		"plugins": [
            { "transform": "@easy-games/unity-component-transformer" },
			{ "transform": "@easy-games/unity-flamework-transformer" }
		]
	},
    "include": [
        "../../Types~/**/*.d.ts",
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
	"rbxts": {
        "rojo": "./default.project.json",
		"includePath": "../Bundles/Shared/Resources/include",
        "type": "airshipbundle"
	}
}
