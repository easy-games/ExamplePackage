{
    "compilerOptions": {
        // required
        "allowSyntheticDefaultImports": true,
        "downlevelIteration": true,
        "jsx": "react",
        "jsxFactory": "Roact.createElement",
        "jsxFragmentFactory": "Roact.Fragment",
        "module": "commonjs",
        "moduleResolution": "Node",
        "noLib": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "moduleDetection": "force",
        "strict": true,
        "target": "ESNext",
        "typeRoots": ["node_modules/@rbxts", "node_modules/@easy-games", "../../../Types~/"],
        "paths": {
            "@*": [
                "../../../../Types~/@*"
            ],
            "@robbie/NetworkSync/*": ["./*"],
            "Client/*": ["./Client/*"],
            "Server/*": ["./Server/*"],
            "Shared/*": ["./Shared/*"]
        },
        "baseUrl": "src",
        "incremental": false,
        "skipLibCheck": true,
        "plugins": [
            // { "transform": "typescript-transform-paths", "afterDeclarations": true }
        ],
        "declaration": true,
        "declarationDir": "../../../Types~/@ExampleOrg/ExamplePackage",
        "outDir": "temp",
    },
    "include": [
        "../../../Types~/**/*.d.ts",
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "../../../Types~/ExamplePackage/*"
    ],
    "rbxts": {
        "rojo": "./default.project.json",
        "includePath": "../Bundles/Shared/Resources/include",
        "type": "airshipbundle"
    }
}